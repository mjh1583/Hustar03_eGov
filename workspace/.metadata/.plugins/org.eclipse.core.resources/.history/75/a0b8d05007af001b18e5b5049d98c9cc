	<script type="text/javascript">
		/*
			예제) 계산기를 만들어보세요.
		*/
		var nums = new Array();
			
		$(document).ready(function() {
			//$("#monitor").val(eval("1+2"));
		});
		
		$(".btn").bind("click", function() {
			var input = $(this).val();
			
			if(input == "C") {
				nums = [];
			}
			else if(input == "=") {
				
			}
			else {	
				nums.push(input);
			}
			var contents = toSting(nums);
			$("#monitor").val(nums);
		});
		
		function toSting(nums) {
			var sentence = "" 
			nums.forEach(function(item, index, array) {
				sentence += item;
			});
			
			return sentence;
		}
		
	</script>
