	<script type="text/javascript">
		function fn_sample1() {
			var money = prompt("지갑에 있는 돈을 알려주세요.");
			
			if(money > 5000) {
				alert('엄청 부자시네요.');
			}
			else if(money > 3000) {
				alert('조금 부자시네요.');
			}
		}
		
		//fn_sample1();
		
		function fn_sample2() {
			for(var i = 1; i <= 10; i++) {
				document.write(i + "<br/>");
			}
		}
	</script>
