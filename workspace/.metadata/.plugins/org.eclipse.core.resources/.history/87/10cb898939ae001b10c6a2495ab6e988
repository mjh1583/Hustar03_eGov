<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>Insert title here</title>
</head>
<body>
	<div style="width: 100px; height: 100px;" id="contentsArea">
		
	</div>
	<input type="button" class="btn" value="yellow" w="200px" h="300px"/>
	<input type="button" class="btn" value="red" w="150px" h="200px"/>
	<input type="button" class="btn" value="blue" w="500px" h="1000px"/>
	
	<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
	<script type="text/javascript">
		/*
			3가지 버튼을 클릭시 contentsArea를 해당 색상으로 변경하고 사이즈를 w,h에 설정된 값으로 변경하세요.
		*/
		$(document).ready(function() {
			function fn_change() {
				$(".btn").each(function() {
					var color = $(this).val();
					
					switch(color) {
						case "yellow":
							$('#contentsArea').attr('style', 'background-color: yellow; width: ' + $(this).attr('w').val() + '; height: ' + $(this).attr('h').val() + ';');
							break;
					}
				});
			}
		});
	</script>
</body>
</html>