<body>
	<div>
		<input type="button" id="btn1" value="tab1">
		<input type="button" id="btn2" value="tab2">
		<input type="button" id="btn3" value="tab3">
	</div>
	<div id="contentsArea1">
		
	</div>
	
	<div id="contentsArea2">
		
	</div>
	
	<div id="contentsArea3">
		
	</div>
	
	<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
	<script type="text/javascript">
		/*
			예제) 페이지 로딩시 해당 탭의 페이지를 contentsArea 안에 넣고, 1번째 페이지만 보이도록 만들어 보세요.
			탭을 클릭하면 해당탭의 내용만 보여지게 하세요.
			탭별로 jsp013_1.jsp, jsp013_2.jsp, jsp013_3.jsp 파일을 만들어서 사용
		*/
		$("#btn1").bind("click", function() {
			fn_getPage("./js013_1.jsp");
		});
		
		$("#btn2").bind("click", function() {
			fn_getPage("./js013_2.jsp");
		});
		
		$("#btn3").bind("click", function() {
			fn_getPage("./js013_3.jsp");
		});
		
		function fn_getPage(url) {
			$.ajax({
				url : url,
				type : "get",		//get, post
				data : {test : "1", test2 : "2"},
				dataType : "html",		//html, json, xml
				beforeSend : function() {
					//로딩...... show()
				},
				success : function(data) {
					$("#contentsArea1").html(data);
				},
				error : function() {
					//alert("오류가 발생하였습니다.");
				},
				complete : function() {
					//...... hide()
				}
			});
		}
		
	</script>
</body>
</html>